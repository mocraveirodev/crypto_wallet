<%= form_with(model: coin) do |form| %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: "form-control", placeholder: "Bitcoin" %>
  </div>

  <div class="mb-3">
    <%= form.label :acronym, style: "display: block" %>
    <%= form.text_field :acronym, class: "form-control", placeholder: "BTC" %>
  </div>

  <div class="mb-3">
    <%= form.label :url_image, style: "display: block" %>
    <%= form.text_field :url_image, class: "form-control", placeholder: "https://img.url/bitcoin.png" %>
  </div>

  <div class="mb-3">
    <%= form.label :mining_type_id, style: "display: block" %>
    <%= form.select("mining_type_id", @mining_type_options, { include_blank: "Selecione..." }, class: "form-control")%>
  </div>

  <div class="mb-3">
    <%= form.submit nil, class:"btn btn-primary" %>
  </div>
<% end %>
