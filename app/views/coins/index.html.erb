<p style="color: green"><%= notice %></p>

<% content_for :title, t('coins') %>

<p><strong><%= t('actual_date') %>:</strong> <%= l(Date.today) %></p>

<h1><%= t('coins') %></h1>

<%= link_to t('links.new_coin'), new_coin_path%>
<%= link_to t('links.back'), welcome_index_path%>

<table class="table table-hover table-striped table-bordered table-responsive">
  <thead class="table-dark">
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_image) %></th>
      <th><%= @coins.human_attribute_name(:mining_type) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "25x25" %></td>
        <td><%= coin.mining_type.description %></td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, data: { turbo_method: :delete, turbo_confirm: "Tem certeza que quer excluir?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
