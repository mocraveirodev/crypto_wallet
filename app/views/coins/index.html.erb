<p style="color: green"><%= notice %></p>

<% content_for :title, "Moedas" %>

<p><strong>Data:</strong> <%= date_format_br(Date.today) %></p>

<h1>Moedas</h1>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sigla</th>
      <th>Logo</th>
      <th>Tipo de Mineração</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "25x25" %></td>
        <td><%= coin.mining_type.description %></td>
        <td><%= link_to 'Mostrar', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Excluir', coin, data: { turbo_method: :delete, turbo_confirm: "Tem certeza que quer excluir?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Cadaste uma nova moeda!", new_coin_path%>
<%= link_to "Voltar para Início", welcome_index_path%>
