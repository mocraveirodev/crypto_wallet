<p style="color: green"><%= notice %></p>

<% content_for :title, "#{MiningType.model_name.human(count: @mining_types.count )}" %>

<h1><%= "#{MiningType.model_name.human(count: @mining_types.count )}" %></h1>

<%= link_to t('new.mining_type'), new_mining_type_path, class:"btn btn-primary"%>
<%= link_to t('links.back'), welcome_index_path, class:"btn btn-secondary" %>

<table class="table table-hover table-striped table-bordered table-responsive mt-3">
  <thead class="table-dark">
    <tr>
      <th><%= @mining_types.human_attribute_name(:description) %></th>
      <th><%= @mining_types.human_attribute_name(:acronym) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('links.delete'), mining_type, data: { turbo_method: :delete, turbo_confirm: t('message.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

