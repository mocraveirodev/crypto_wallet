<p style="color: green"><%= notice %></p>

<% content_for :title, t('mining_types') %>

<h1><%= t('mining_types') %></h1>

<table class="table table-hover table-striped table-bordered table-responsive">
  <thead class="table-dark">
    <tr>
      <th><%= @mining_types.human_attribute_name(:description) %></th>
      <th><%= @mining_types.human_attribute_name(:acronym) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('links.delete'), mining_type, data: { turbo_method: :delete, turbo_confirm: "Tem certeza que quer excluir?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('new_mining_type'), new_mining_type_path%>
<%= link_to t('links.back'), welcome_index_path%>
