<p style="color: green"><%= notice %></p>

<% content_for :title, "Tipos de Mineração" %>

<h1>Tipos de Mineração</h1>

<table>
  <thead>
    <tr>
      <th>Tipo de Mineração</th>
      <th>Sigla</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to 'Mostrar', mining_type %></td>
        <td><%= link_to 'Editar', edit_mining_type_path(mining_type) %></td>
        <td><%= link_to 'Excluir', mining_type, data: { turbo_method: :delete, turbo_confirm: "Tem certeza que quer excluir?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Novo Tipo de Mineração", new_mining_type_path %>
<%= link_to "Voltar para Início", welcome_index_path %>
